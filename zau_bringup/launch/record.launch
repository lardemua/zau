<?xml version="1.0"?>
<launch>
        <arg name="bag" default="/tmp/tmp.bag"/>
<!--        <param name="/use_sim_time" value="false"/>-->

        <!--To record only raw data-->
        <!-- http://wiki.ros.org/openni_launch/Tutorials/BagRecordingPlayback-->
        <node name="rosbag_record" pkg="rosbag" type="record" output="screen" args="
        /tf
        /tf_static
        /joint_states
        /astra0/camera_info
        /astra0/image_raw/compressed
        /astra1/camera_info
        /astra1/image_raw/compressed
        /hand_camera/color/camera_info
        /hand_camera/color/image_raw/compressed
        /hand_camera/depth/camera_info
        /hand_camera/depth/image_rect_raw/compressed
        /velodyne_points
        /vo_camera/odom/sample
        -o $(arg bag)">
        </node>
</launch>
