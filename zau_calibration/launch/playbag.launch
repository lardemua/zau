<!--
@file playbag.launch Plays back the bag file.
    Sets up image decompressors if needed, reads the urdf robot description.

@arg bag_file  Absolute path to the playing bag.
    default: $(env ROS_BAGS)/zau/inesc_day2_2_processed_atom_filtered.bag
@arg bag_start Playback starting time (in seconds). default: 0.0
@arg bag_rate  Playback rate. default: 1.0
@arg use_atom_bag_file  Uses the bag file to complement the transformations generated by the urdf/joint_states/robot_state_publisher. Used in cases like softbot. default: False
-->

<launch>

    <arg name="bag_file" default="$(env ROS_BAGS)/zau/inesc_day2_2_processed_atom_filtered.bag"/>
    <arg name="bag_start" default="0"/>
    <arg name="bag_rate" default="1"/>
    <arg name="optimized" default="false"/>
    <arg name="rviz_file" default="$(find zau_calibration)/rviz/playbag.rviz"/>
    <arg name="description_file" default="$(find zau_calibration)/urdf/initial_estimate.urdf.xacro"
         unless="$(arg optimized)"/>
    <arg name="description_file" default="$(find zau_calibration)/urdf/optimized.urdf.xacro"
         if="$(arg optimized)"/>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Throttle topics -->
    <node pkg="topic_tools" type="throttle" name="throttler_rgbd_hand_color"
          args="messages /rgbd_hand/color/image_raw/compressed_to_throttle 10 /rgbd_hand/color/image_raw/compressed"/>
    
    <node pkg="topic_tools" type="throttle" name="throttler_rgbd_hand_depth"
          args="messages /rgbd_hand/depth/image_raw_to_throttle 10 /rgbd_hand/depth/image_raw"/>
    
    <node pkg="topic_tools" type="throttle" name="throttler_rgb_body_left"
          args="messages /rgb_body_left/image_raw/compressed_to_throttle 10 /rgb_body_left/image_raw/compressed"/>
    
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Load robot description and tf generators -->
    <param name="robot_description" command="$(find xacro)/xacro $(arg description_file)"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Playback the bag file -->
    <param name="/use_sim_time" value="true"/>

    <!-- Play atom bag file adding tfs robot_state_publisher  -->
    <node pkg="rosbag" type="play" name="rosbag_play" output="screen"
              args=" $(arg bag_file) --clock -r $(arg bag_rate) -l -s $(arg bag_start) -d 2 /rgbd_hand/color/image_raw/compressed:=/rgbd_hand/color/image_raw/compressed_to_throttle /rgbd_hand/depth/image_raw:=/rgbd_hand/depth/image_raw_to_throttle /rgb_body_left/image_raw/compressed:=/rgb_body_left/image_raw/compressed_to_throttle"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Image Topic Decompression -->
    <node pkg="image_transport" type="republish" name="decompressor_rgbd_hand_color" output="screen"
          args="compressed in:=/rgbd_hand/color/image_raw raw out:=/rgbd_hand/color/image_raw"/>
    <node pkg="image_transport" type="republish" name="decompressor_rgb_body_left" output="screen"
          args="compressed in:=/rgb_body_left/image_raw raw out:=/rgb_body_left/image_raw"/>
    <node pkg="image_transport" type="republish" name="decompressor_rgb_body_right" output="screen"
          args="compressed in:=/rgb_body_right/image_raw raw out:=/rgb_body_right/image_raw"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->
    <!-- Visualization -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_file)" required="true"/>
    <!-- %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% -->

</launch>